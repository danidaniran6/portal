<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="origin"
            type="io.dee.portal.core.data.local.Location" />

        <variable
            name="destination"
            type="io.dee.portal.core.data.local.Location" />

        <variable
            name="isOriginFilled"
            type="boolean" />

        <variable
            name="isDestinationFilled"
            type="boolean" />

        <variable
            name="fetchRoutingLoading"
            type="boolean" />

        <variable
            name="isRouting"
            type="boolean" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <org.neshan.mapsdk.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvBackToRoute"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/back_to_route"
            android:textSize="12sp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/button_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toTopOf="@+id/cvBottom"
            app:layout_constraintEnd_toEndOf="@+id/cvBottom">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/pbBackToRoute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:indicatorColor="@color/black_alpha_30"
                app:trackColor="@color/button_background"
                app:trackThickness="40dp"
                tools:progress="50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/back_to_route"
                android:textColor="@color/just_white"
                android:textSize="12sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnMyLocation"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_my_location"
            android:visibility="@{isRouting?View.GONE:View.VISIBLE}"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cvBottom"
            app:layout_constraintEnd_toEndOf="@+id/cvBottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_my_location"
                app:tint="@color/button_background" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvBottom"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{isRouting?View.GONE:View.VISIBLE}"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/origin"
                    android:textSize="14sp" />

                <LinearLayout

                    android:id="@+id/llOriginLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_4_secondary"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/btnClearOriginLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:animateLayoutChanges="true"
                        android:src="@drawable/close_square"
                        android:visibility="@{isOriginFilled?View.VISIBLE:View.GONE}"
                        app:tint="@color/red" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.5"
                        android:animateLayoutChanges="true"
                        android:src="@drawable/ic_search_linear"
                        android:visibility="@{isOriginFilled?View.GONE:View.VISIBLE}"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvOriginLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/search_on_map"
                        android:padding="5dp"
                        android:text="@{origin.addressOrLatLngString}"
                        android:textAlignment="viewEnd"
                        android:textSize="12sp" />


                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/destination"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDestinationLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_4_secondary"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/btnClearDestinationLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:animateLayoutChanges="true"
                        android:src="@drawable/close_square"
                        android:visibility="@{isDestinationFilled?View.VISIBLE:View.GONE}"
                        app:tint="@color/red" />

                    <ImageView
                        visibility="@{isDestinationFilled?View.GONE:View.VISIBLE}"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.5"
                        android:animateLayoutChanges="true"
                        android:src="@drawable/ic_search_linear"

                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvDestinationLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/search_on_map"
                        android:padding="5dp"
                        android:text="@{destination.addressOrLatLngString}"
                        android:textAlignment="viewEnd"
                        android:textSize="12sp" />


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearchDriver"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/start_routing"
                    android:textColor="@color/just_white"
                    android:textFontWeight="700"
                    android:visibility="@{fetchRoutingLoading?View.GONE:View.VISIBLE}"
                    app:backgroundTint="@color/button_background"
                    app:cornerRadius="10dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:alpha="0.85"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="@{fetchRoutingLoading?View.VISIBLE:View.GONE}"
                    app:cardBackgroundColor="@color/button_background"
                    app:cornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ProgressBar
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/white"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/routing_in_progress"
                            android:textColor="@color/just_white"
                            android:textFontWeight="700" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="@{isRouting?View.VISIBLE:View.GONE}"
                tools:visibility="visible">

                <include

                    android:id="@+id/currentStep"
                    layout="@layout/steps_item_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/round_4_transparent_stroke"
                    android:backgroundTint="@color/button_background"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvOrigin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_4_secondary"
                        android:padding="10dp"
                        android:text="@{origin.addressOrLatLngString}"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@+id/tvDestination"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDestination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_4_secondary"

                        android:padding="10dp"
                        android:text="@{destination.addressOrLatLngString}"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivArrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvOrigin" />

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_down"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/button_background" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelRouting"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/cancel_routing"
                    android:textColor="@color/just_white"
                    android:textFontWeight="700"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNextStep"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="10dp">

                <include
                    android:id="@+id/nextStep"
                    layout="@layout/steps_item_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcSteps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>